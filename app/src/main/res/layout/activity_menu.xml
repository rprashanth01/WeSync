<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="prashanth.wesync.MenuActivity">

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/we" />

    <Button
        android:id="@+id/buttonDest"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_alignStart="@+id/buttonInterest"
        android:layout_below="@+id/buttonEditProfile"
        android:layout_marginTop="46dp"
        android:background="@color/colorAccent"
        android:onClick="findFriendsByDest"
        android:text="Friends by Destination"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/buttonInterest"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_alignStart="@+id/buttonEvent"
        android:layout_centerVertical="true"
        android:background="@color/colorPrimary"
        android:onClick="findFriendsByInterest"
        android:text="Friends by Interest"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="319dp" />

    <Button
        android:id="@+id/buttonEvent"
        android:layout_width="323dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="findFriendsByEvent"
        android:text="Friends By Event"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="101dp" />


    <Button
        android:id="@+id/buttonEditProfile"
        android:layout_width="139dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="editProfile"
        android:text="Edit Profile"
        tools:layout_editor_absoluteX="247dp"
        tools:layout_editor_absoluteY="7dp" />

    <Button
        android:id="@+id/buttonUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonDest"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark"
        android:onClick="getAllUsers"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Load Users" />




    <Button
        android:id="@+id/buttonforum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:onClick="gotoForum"
        android:text="Forum"
        android:layout_alignBaseline="@+id/buttonsync"
        android:layout_alignBottom="@+id/buttonsync"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonsync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="syncData"
        android:text="Sync" />

</RelativeLayout>
